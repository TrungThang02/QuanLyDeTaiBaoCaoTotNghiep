@model  QuanLyDeTaiBaoCaoTotNghiep.Models.GraduationReport

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@{ 
    var id = Session["TaiKhoan3"];
}
    <style>
        .file {
            display: flex;
            margin: 10px;
            justify-content: space-around;
        }

        .form-control {
            border-radius: 8px;
        }
    </style>

    @*<script src="https://cdn.tiny.cloud/1/rvt1c4e3h6r9h3z9d9rhddwydcn9o15cvz3keb7nt1b10mob/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

        <script>
            tinymce.init({
                selector: '#mytextarea'
            });
        </script>*@



    <div class="container" style="margin-top : 50px;width :1000px">

        @*Thêm thuộc tính cho form để upload ảnh*@
        @using (Html.BeginForm("Create", "Documents", FormMethod.Post, new
        {
            @enctype =
        "multipart/form-data"
        }))
        {
            @Html.AntiForgeryToken()
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group file">


                <div class="col-md-5">
                    <label class="control-label">Tên tài liệu:</label>
                    <input type="text" size="70" name="sTenSach" value="@ViewBag.TenSach" class="form-control"
                           required />
                </div>



                <div class="col-md-5">
                    <label class="control-label">Mô tả:</label>
                    <textarea name="sMoTa" id="mytextarea" class="form-control">@ViewBag.MoTa</textarea>
                </div>

            </div>
            <div class="form-group file">


                <div class="col-md-5">
                    <label class="control-label">Ảnh bìa:</label>
                    <input type="file" name="image" class="form-control" />
                    @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
                    @ViewBag.ThongBao
                </div>



                <div class="col-md-5">
                    <label class="control-label">File tài liệu:</label>
                    <input type="file" name="file" class="form-control" />
                    @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
                    @ViewBag.ThongBao
                    <p>LƯU Ý : Chỉ được up file PDF < 20.MB !</p>
                </div>


            </div>
            <div class="form-group file">

                <div class="col-md-5">
                    <label class="control-label">Ngày tải lên:</label>
                    <input type="date" name="dNgayCapNhat" required class="form-control" />
                </div>


                <div class="col-md-5">
                    <label class="control-label">Khoa - viện:</label>
                    @*Hiển thị ViewBag.MaCD vào dropdownlist*@
                    @Html.DropDownList("FacultyID", null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group file">

                <div class="col-md-5">
                    <label class="control-label">Lớp: </label>
                    @Html.DropDownList("ClassID", null, new { @class = "form-control" })
                </div>

                <div class="col-md-5">
                    <label class="control-label">Niên khóa:</label>
                    @Html.DropDownList("YearID", null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group file">

                <div class="col-md-5">
                    <label class="control-label">Từ khóa:</label>
                    <input type="text" size="70" name="sKeyword" value="" class="form-control"
                           required />
                </div>
                <div class="col-md-5">
                    <label class="control-label">ID người dùng:</label>
                    <input type="text" size="70" name="UserID" value="@id" class="form-control"
                           required readonly />
                </div>
            </div>
         
            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <center>
                        <input type="submit" value="Thêm mới" class="btn btn-success" style="padding : 10px;width: 200px;margin-top :20px" />
                    </center>
                </div>
            </div>
        </div>
        }
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
