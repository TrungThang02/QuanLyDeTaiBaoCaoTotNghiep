
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    section, .section-padding {
        padding: 0;
    }

    label {
        font-weight: 500;
        margin-bottom: 0;
    }

    .form-control {
        border-radius: 0.3rem;
    }
</style>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<section>
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div>
                    <div class="card-body">
                        <h4 class="text-uppercase text-center">đăng nhập hệ thống</h4>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form>
                        <div class="form-group">
                            <label class="text-left">Tên người dùng</label>
                            @Html.TextBox("TenDN", null, new { @class = "form-control", placeholder = "username" })
                            @*<input type="text" id="TenDN" class="form-control" />*@

                        </div>

                        <div class="form-group">
                            <label class="form-label" for="typePasswordX-2">Mật khẩu</label>
                            @Html.Password("MatKhau", null, new { @class = "form-control form-control-lg", placeholder = "password" })
                            @*<input type="password" id="MatKhau" class="form-control form-control-lg" />*@

                        </div>
                        <div class="form-group">

                            <div class="g-recaptcha" data-sitekey="6Let3L0jAAAAABFwkY8edILuo3fX0U5gGzEoCeph"></div>
                            @*<div class="g-recaptcha" data-sitekey="6LdPxmAlAAAAAI5URX6z8aUgEKjPUTK5AFn13uuA"></div>*@
                        </div>
                        <!-- Checkbox -->
                        <div class="form-group text-right">

                            <label class="form-label"><a href="@Url.Action("ForgotPassword","User")" style="font-style: italic; text-align:right; color :#3b5998">Quên mật khẩu ?</a></label>
                        </div>
                        <p style="color: red; font-weight: bold; text-align: center">@ViewBag.ThongBao</p>
                        @*<p style="color: red">@ViewBag.ThongBao</p>*@
                        <button class="btn btn-primary btn-lg btn-block btn-primary mb-1 form-control" type="submit">Đăng nhập</button>
                        <div class="form-group text-center">
                            <span class="form-label text-center">Chưa có tài khoản, nhấp <a href="/User/SignUp" class="font-weight-bold text-center">vào đây</a> để đăng ký !</span>
                        </div>


                    </form>
                        }
                        </div>
                </div>
            </div>
        </div>
    </div>
</section>
