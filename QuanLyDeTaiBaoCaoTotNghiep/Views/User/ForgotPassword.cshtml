
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        @using (Html.BeginForm())
                        {

                            <h3 align="center" style="margin-bottom : 20px;">Quên mật khẩu ?</h3>
                            <h6 class="fw-light">Nhập vào Email tài khoản </h6>

                            <form class="pt-3">
                                <div class="form-group">
                                    @Html.TextBox("Email", "", null, new { @class = "form-control form-control-lg", placeholder = "Nhập vào email tài khoản" })

                                </div>


                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Gửi</button>
                                </div>
                                <div class="text-success">
                                    <p style="text-align :center; margin-top : 10px;">@ViewBag.Message</p>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
