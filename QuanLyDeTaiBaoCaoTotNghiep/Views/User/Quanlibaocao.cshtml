    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>

        <style>
            .img {
                border-radius: 10px;
                height: 110px;
                object-fit: cover;
                box-shadow: rgba(9, 30, 66, 0.25) 0px 4px 8px -2px, rgba(9, 30, 66, 0.08) 0px 0px 0px 1px;
            }

            td {
                vertical-align: baseline;
                align-items: center;
            }

            th {
                font-weight: bolder;
            }

            p {
                width: 200px;
                overflow: hidden;
                white-space: nowrap;
                text-overflow: ellipsis;
            }
        </style>
    </head>
    @helper  Truncate(string s, int length)
    {
        if (s.Length < length)
        {
            @s
        }
        else
        {
            @s.Substring(0, length)<text>...</text>
        }
    }
    <body>
        <div class="container">
            <p style="margin-top : 20px">
                <a href="/Documents/Create" class="btn btn-primary">Tải lên</a>
            </p>
            <table class="table">
                <tr>
