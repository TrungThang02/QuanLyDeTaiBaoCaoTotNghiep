                        </th>*@
                    @*<th>
                            @Html.DisplayNameFor(model => model.Keyword)
                        </th>*@
                    <th>
                        Lớp
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Faculty.FacultyName)
                        </th>*@
                    <th>
                        Niên khóa
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
