
@{
    ViewBag.Title = "UnapprovedReports";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model List<QuanLyDeTaiBaoCaoTotNghiep.Models.GraduationReport>
@{
    ViewBag.Title = "Unapproved Reports";
}

<h4>Phê duyệt báo cáo</h4>

<table class="table">
    <thead>
        <tr>

            <th>Tên báo cáo</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.GraduationReportName</td>


                <td>
                    <a href="/Documents/CheckTypeFile/@report.GraduationReportID" class = "btn btn-info">Chi tiết</a>
                        @*@Html.ActionLink("Chi tiết", "Details", new { id = report.GraduationReportID }, new { @class = "btn btn-info" })*@
                        <a data-id="@report.GraduationReportID" class="btn btn-danger delete">Xóa</a>
                        <a data-id="@report.GraduationReportID" class="btn btn-success app">Duyệt</a>

                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const btnDelete = document.querySelectorAll('.delete');
    const btnApp = document.querySelectorAll('.app');
    btnDelete.forEach(btn => {
        btn.addEventListener('click', (event) => {
            var id = btn.dataset.id;
            event.preventDefault();

            Swal.fire({
                title: 'Bạn có chắc chắn muốn xóa ?',
                text: "Nếu bạn xóa bạn không thể khôi phục lại!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonText: 'Hủy',
                confirmButtonText: 'Xóa'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Xóa thành công'
                    )
                    window.location.href = "/GraduationReport/Delete/" + id;
                }
            })
        });
    });


    btnApp.forEach(btn => {
        btn.addEventListener('click', (event) => {
            var id = btn.dataset.id;
            event.preventDefault();

            Swal.fire({
                title: 'Duyệt báo cáo này ?',
  /*              text: "Nếu bạn xóa bạn không thể khôi phục lại!",*/
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonText: 'Hủy',
                confirmButtonText: 'Duyệt'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Đã duyệt'
                    )
                    window.location.href = "/Admin/GraduationReport/ApproveDocument/" + id;
                }
            })
        });
    });

</script>